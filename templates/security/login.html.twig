{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion !</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Adresse email ..." required="required" name="_username" class="form-control">
        </div>
        <div class="form-group">
            <input type="password" placeholder="Mot de passe ..." required="required" name="_password" class="form-control">
        </div>
        <div class="form-group"><button type="submit" class="btn btn-success">Connexion !</button></div>
    </form>
{% endblock %}
